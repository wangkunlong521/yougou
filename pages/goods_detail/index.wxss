page{
  padding-bottom: 90rpx;
}
swiper{
  height:70vw;
  text-align: center;
}
image{
  width:60%;
}

.goods_price{
  padding:15rpx;
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
}
.goods_name_row{
  display: flex;
  border-bottom: 5rpx solid #dedede;
  border-top: 5rpx solid #dedede;
  padding:10rpx 0;
}
.goods_name{
  color:#000;
  font-size: 30rpx;
  padding:0 10rpx;
  flex:8;
  border-right:1rpx solid #000;

  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_collect{
  flex:2;
  text-align: center;
}

.goods_info_title{
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: var(--themeColor);
}

.btm_tool{
  position:fixed;
  left:0;
  bottom: 0;
  background: #fff;
  display: flex;
  width: 100%;
  height:90rpx;
  border-top:1rpx solid #ccc;
}
.tool_item{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  position: relative;
}
button{
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  height:100%;
  opacity: 0;
}
.btn_cart{
  flex:2;
  background: #ffa500;
  color:#fff;
  font-size: 30rpx;
  font-weight: 600;
}
.btn_buy{
  flex:2;
  background: #eb4450;
  color:#fff;
  font-size: 30rpx;
  font-weight: 600;
}

.icon-shoucang1{
  color:var(--themeColor);
}